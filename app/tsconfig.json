{
    "compilerOptions": {
        "sourceMap": true,
        "target": "es5",
        "jsx": "react",
        "module": "es6",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "declaration": false,
        "removeComments": true,
        "noImplicitReturns": true,
        "noImplicitAny": false,
        "noUnusedLocals": false,
        "strict": true,
        "outDir": "build",
        "lib": ["es2018", "dom"],
        "baseUrl": "src",
        "paths": {
            "app/*": ["./app/*"]
        }
    },
    "exclude": ["dist", "build", "node_modules", "temp"]
}
